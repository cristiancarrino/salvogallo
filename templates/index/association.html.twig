{% extends 'base.html.twig' %}

{% block main %}
    <div class="container">
        <!-- START THE FEATURETTES -->
        <div class="featurette-container">
            <img class="w-100 mb-4 mb-md-5" src="{{ asset('img/logo.png') }}" alt="{{ 'caption_1' | trans({}, 'association') }}">

            <div class="featurette">
                <h2 class="featurette-heading" id="chi-siamo">{{ 'who_we_are' | trans({}, 'association') }}</h2>

                {{ 'who_we_are_text' | trans({}, 'association') | raw }}
            </div>

            <hr class="featurette-divider">

            <div class="featurette">
                <h2 class="featurette-heading" id="mission">{{ 'mission' | trans({}, 'association') }}</h2>

                {{ 'mission_text' | trans({}, 'association') | raw }}
            </div>

            <hr class="featurette-divider">

            <div class="featurette" id="vision">
                <h2 class="featurette-heading">{{ 'vision' | trans({}, 'association') }}</h2>

                {{ 'vision_text' | trans({}, 'association') | raw }}
