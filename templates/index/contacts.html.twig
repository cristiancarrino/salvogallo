{% extends 'base.html.twig' %}

{% block main %}
    <div class="container">
        <div class="featurette-container">
            <div class="row featurette whatsapp text-center text-sm-left">
                <div class="col-sm-auto mb-3 mb-sm-0">
                    <img src="{{ asset('img/whatsapp.png') }}" width="150px">
                </div>
                <div class="col">
                    <h2 class="featurette-heading">{{ 'contact_us' | trans({}, 'contacts') }}</h2>
                    {{ 'contact_us_text' | trans({}, 'contacts') | raw }}
                </div>
            </div>

            <hr class="featurette-divider">

            <div class="row featurette gmail text-center text-sm-left">
                <div class="col-sm-auto mb-3 mb-sm-0">
                    <img src="{{ asset('img/email.png') }}" width="150px">
                </div>
                <div class="col">
                    <h2 class="featurette-heading">{{ 'write_us' | trans({}, 'contacts') }}</h2>
                    <p class="lead my-5">Mail: <a href="mailto:info@articolo2.com"><strong>info@articolo2.com</strong></a></p>

                    {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
                    {{ form_widget(form) }}
                    {{ form_end(form) }}
                </div>
            </div>

            <hr class="featurette-divider">

            <div class="row featurette text-center text-sm-left">
                <div class="col-sm-auto mb-3 mb-sm-0">
                    <img src="{{ asset('img/position.png') }}" width="150px">
                </div>
                <div class="col">
                    <h2 class="featurette-heading">{{ 'write_us' | trans({}, 'contacts') }}</h2>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2797.3494523352174!2d9.206402315558082!3d45.48290727910113!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4786c6c3735cf3e5%3A0x4fc9cc110d89e104!2sVia+Lodovico+Settala%2C+84%2C+20124+Milano+MI!5e0!3m2!1sit!2sit!4v1548682103041" width="100%" height="500" frameborder="0" style="border:0" allowfullscreen></iframe>
                    <p class="lead">{{ 'come_to_us_text' | trans({}, 'contacts') }}</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
